<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-nativeaudio"
    version="3.1.1">
      
    <name>Cordova Native Audio</name>
    <author>Andrew Trice, Raymond Xie, SidneyS, etc.</author>
	<description>Cordova/PhoneGap Plugin for low latency Native Audio Playback, must have for HTML5 games</description>
    
	<license>MIT</license>
	<keywords>audio,fx,music,mp3,game,rjfun,rastafan</keywords>
    <repo>https://github.com/rastafan/cordova-plugin-nativeaudio.git</repo>
    <issue>https://github.com/rastafan/cordova-plugin-nativeaudio/issues</issue>

	<engines>
	    <engine name="cordova" version=">=3.5" />
	</engines>

    <js-module src="www/nativeaudio.js" name="nativeaudio">
        <clobbers target="window.plugins.NativeAudio"/>
    </js-module>

    <!-- android -->
    <platform name="android">
        
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="NativeAudio">
                <param name="android-package" value="com.rastafan.cordova.plugin.nativeaudio.NativeAudio"/>
            </feature>
        </config-file>
		
		<config-file target="AndroidManifest.xml" parent="/manifest/application">
			<service android:name="com.rastafan.cordova.plugin.nativeaudio.MusicControlsNotificationKiller"></service>
		</config-file>

        <source-file src="src/android/NativeAudio.java" target-dir="src/com/rastafan/cordova/plugin/nativeaudio"/>
        <source-file src="src/android/NativeAudioAsset.java" target-dir="src/com/rastafan/cordova/plugin/nativeaudio"/>
        <source-file src="src/android/NativeAudioAssetComplex.java" target-dir="src/com/rastafan/cordova/plugin/nativeaudio"/>
		
		<source-file src="src/android/MediaSessionCallback.java" target-dir="src/com/rastafan/cordova/plugin/nativeaudio"/>
		<source-file src="src/android/MusicControlsBroadcastReceiver.java" target-dir="src/com/rastafan/cordova/plugin/nativeaudio"/>
		<source-file src="src/android/MusicControlsInfos.java" target-dir="src/com/rastafan/cordova/plugin/nativeaudio"/>
		<source-file src="src/android/MusicControlsNotification.java" target-dir="src/com/rastafan/cordova/plugin/nativeaudio"/>
		<source-file src="src/android/KillBinder.java" target-dir="src/com/rastafan/cordova/plugin/nativeaudio"/>
		<source-file src="src/android/MusicControlsNotificationKiller.java" target-dir="src/com/rastafan/cordova/plugin/nativeaudio"/>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
            <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
        </config-file>

    </platform>

    <!-- ios -->
    <platform name="ios">

        <config-file target="config.xml" parent="/*">
            <feature name="NativeAudio">
                <param name="ios-package" value="NativeAudio"/>
            </feature>
        </config-file>

        <framework src="Foundation.framework"/>
        <framework src="AVFoundation.framework"/>
        <framework src="AudioToolbox.framework"/>

        <header-file src="src/ios/NativeAudio.h"/>
        <source-file src="src/ios/NativeAudio.m"/>

        <header-file src="src/ios/NativeAudioAsset.h"/>
        <source-file src="src/ios/NativeAudioAsset.m"/>

    </platform>

</plugin>
